{% extends 'base.html.twig' %}

{% block title %}Accueil - TODOLIST {% endblock %}

{% block body %}
    {% include 'components/header.html.twig' %}

    <!-- Cards for the TODOLIST -->
    <section class="m-20 container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for task in tasks %}
                <div class="card shadow-md p-4 hover:border-2 border-b-blue-950 rounded">
                    <h2 class="font-semibold text-xl">{{ task.title }}</h2>
                    <p class="text-gray-600">{{ task.description }}</p>
                    <div class="flex justify-between items-center mt-4">
                        <span class="text-gray-500">{{ task.created_at|date('d/m/Y') }}</span>
                        <button class="btn btn-primary bg-blue-500 px-3 py-1 text-white rounded hover:bg-blue-700">Marquer comme fait</button>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
